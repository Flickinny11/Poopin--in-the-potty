# VidLiSync Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# AI Service Configuration
OPENAI_API_KEY=your_openai_api_key
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Wunjo CE Configuration
WUNJO_MODEL_PATH=/models
WUNJO_INSTALL_PATH=/opt/wunjo

# Model Versions (locked for consistency)
WUNJO_VOICE_MODEL=wunjo-voice-v2.1
WUNJO_LIPS_MODEL=wunjo-lips-v1.8
WHISPER_MODEL=whisper-large-v3

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Performance Configuration
MAX_CONCURRENT_STREAMS=100
AUDIO_CHUNK_SIZE_MS=100

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_endpoint_secret
STRIPE_PRICE_ID_BASIC=price_your_basic_price_id
STRIPE_PRICE_ID_PRO=price_your_pro_price_id
STRIPE_PRICE_ID_BUSINESS=price_your_business_price_id

# Frontend Configuration
FRONTEND_URL=https://your-frontend-domain.com

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Server Configuration
PORT=8000
HOST=0.0.0.0
WORKERS=4

# Logging Configuration
LOG_LEVEL=INFO

# Monitoring Configuration (Optional)
SENTRY_DSN=your_sentry_dsn_url

# Performance Configuration
MAX_REQUESTS_PER_MINUTE=60
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Webhook Configuration
WEBHOOK_RETRY_MAX=3
WEBHOOK_TIMEOUT_SECONDS=30

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_DETAILED_LOGGING=false

# Environment
ENVIRONMENT=production